#enable vi-like command line editing
set -o vi

#set up completion surpport for Git core
#if yet not exist copy the skeleton
[ ! -e ~/.git_completion.sh ] && if [ -f /etc/bash_completion.d/git ]; then
   cp /etc/bash_completion.d/git ~/.git_completion.sh
#   echo `ls ~/.git_completion.sh`
fi
# if still yet not exist then try to the other way.
[ ! -e ~/.git_completion.sh ] && if [ -f /etc/bash_completion.d/git-prompt ] ; then 
   echo -n '. /etc/bash_completion.d/git-prompt' > ~/.git_completion.sh 
fi

if [ -f ~/.git_completion.sh ]; then
   . ~/.git_completion.sh
#   PS1="\[\033[0;34m\][\u@\h:\w]$\[\033[0m\] # the original
#   PS1='\[\033[0;34m\][\u@\h \W$(__git_ps1 " (%s)")]\$ \[\033[0m\]' # the original color
   PS1='\[\033[01;32m\]\u@\h\[\033[01;32m\] \w\[\033[01;33m\]$(__git_ps1)\[\033[01;34m\] \$\[\033[00m\]' # different color for each part
   export GIT_PS1_SHOWDIRTYSTATE=1 # show an indecator after branch name
fi

#set up aliases
alias ls='ls --color=auto'

# setup proxy environment
export http_proxy=http://proxy.jmas.co.jp:8080/
export ftp_proxy=http://proxy.jmas.co.jp:8080/
export https_proxy=http://proxy.jmas.co.jp:8080/ 
